---
import {Icon} from "astro-icon/components";
import {EXTERNAL_URL} from "@utils/url";

const currentYear = new Date().getFullYear();
---

<footer>
	<div class="content">
		<a href="/" class="logo">
			<Icon title="" name="logo" width={40} height={40} />
			<span>Andrei Nedelus</span>
		</a>
		<p>
			Copyright &copy; {currentYear} | All rights reserved.
		</p>
		<div class="iconsContainer">
			<a
				href={EXTERNAL_URL.GITHUB.URL}
				title={EXTERNAL_URL.GITHUB.TITLE}
				aria-label={EXTERNAL_URL.GITHUB.ARIA_LABEL}
				class="icon"
				target="_blank"
			>
				<Icon name="ri:github-fill" width={30} height={30} />
			</a>
			<a
				href={EXTERNAL_URL.LINKEDIN.URL}
				title={EXTERNAL_URL.LINKEDIN.TITLE}
				aria-label={EXTERNAL_URL.GITHUB.ARIA_LABEL}
				class="icon"
				target="_blank"
			>
				<Icon name="ri:linkedin-box-fill" width={30} height={30} />
			</a>
			<a
				href={EXTERNAL_URL.INSTAGRAM.URL}
				title={EXTERNAL_URL.INSTAGRAM.TITLE}
				aria-label={EXTERNAL_URL.INSTAGRAM.ARIA_LABEL}
				class="icon"
				target="_blank"
			>
				<Icon name="ri:instagram-line" width={30} height={30} />
			</a>
		</div>
	</div>
</footer>

<style>
	footer {
		margin-top: 6rem;
		width: 100%;
		border-top: 1px solid var(--light_purple_100);
	}

	.content {
		display: flex;
		align-items: center;
		justify-content: center;
		flex-direction: column;
		gap: 1rem;
		padding: 2rem 1rem;
		max-width: 80rem;
		margin: 0 auto;
	}

	.iconsContainer {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 1rem;
	}

	.iconsContainer .icon,
	.logo {
		color: currentColor;
		text-decoration: none;
	}

	.iconsContainer .icon:hover {
		color: var(--light_blue_100);
		transition: 0.2s;
	}

	.logo {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 1rem;
	}

	.logo span {
		font-size: 1.5rem;
		font-weight: 600;
		line-height: 2rem;
	}
</style>
