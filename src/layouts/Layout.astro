---
import {getThumbnail} from "../utils/cloudinary";
type Props = {
	title?: string;
	description?: string;
};

const {
	title = "Andrei Nedelus Senior FrontEnd Developer",
	description = "Contractor | Freelancer | Delivering Premium Front End Solutions for online business worldwide.",
} = Astro.props;
const image = getThumbnail(title, description);
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<link
			rel="icon"
			type="image/x-icon"
			sizes="16x16 24x24 32x32 64x64"
			href="/public/favicons/favicon.ico"
		/>
		<meta name="language" content="English" />
		<meta name="author" content="Andrei Nedelus" />
		<meta name="generator" content={Astro.generator} />

		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="description" content={description} />
		<meta name="theme-color" content="#134e4a" />
		<link rel="canonical" href={Astro.url} />
		<title>{title}</title>
		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={image} />
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={Astro.url} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={image} />
	</head>
	<body>
		<img src={image} />
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
