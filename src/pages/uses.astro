---
import Layout from "@layouts/Layout.astro";
import UsesComponent from "@components/react/uses/Uses";
import {getUsesOptimizedImages} from "@utils/images";
import type {CarouselImage} from "@components/react/carousel/Carousel";

const optimizedImages: CarouselImage[] = await getUsesOptimizedImages();
---

<Layout headerText="Uses">
	<UsesComponent
		showHeader={false}
		client:only="react"
		images={optimizedImages}
	/>
</Layout>
